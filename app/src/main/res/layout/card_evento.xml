<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <ImageView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_green"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textoNombreEvento"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="19dp"
        android:gravity="center|left"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Nombre"/>

    <TextView
        android:id="@+id/textoUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/textoNombreEvento"
        android:layout_alignLeft="@+id/textoNombreEvento"
        android:layout_marginTop="5dp"
        android:text="Ubicación:"/>

    <TextView
        android:id="@+id/textoNumAgentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_below="@+id/textoUbicacion"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/textoNombreEvento"
        android:layout_marginTop="5dp"
        android:text="Nº agentes: "/>

</RelativeLayout>